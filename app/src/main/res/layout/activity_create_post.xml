<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/dietCreToolbar"
        layout='@layout/toolbar' />

    <Button
        android:id="@+id/postSubmitBtn"
        style="@style/ButtonTheme"
        android:layout_width="239dp"
        android:layout_height="49dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="109dp"
        android:text="@string/SubmitPostBtn"
        app:layout_constraintEnd_toEndOf="@+id/postMainTextArea"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toStartOf="@+id/postMainTextArea"
        app:layout_constraintTop_toBottomOf="@+id/postMainTextArea" />

    <EditText
        android:id="@+id/postMainTextArea"
        android:layout_width="306dp"
        android:layout_height="137dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_input_border"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dietCreToolbar" />

    <ImageButton
        android:id="@+id/addImageBtn"
        style="@style/ButtonTheme"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/postSubmitBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postMainTextArea"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_image_24" />

    <TextView
        android:id="@+id/textViewImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toTopOf="@+id/addImageBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postMainTextArea" />

</androidx.constraintlayout.widget.ConstraintLayout>