<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/dietCreToolbar"
        layout='@layout/toolbar' />

    <Button
        android:id="@+id/postSubmitBtn"
        style="@style/ButtonTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="@string/SubmitPostBtn"
        app:layout_constraintStart_toStartOf="@+id/postMainTextArea"
        app:layout_constraintTop_toBottomOf="@+id/postMainTextArea" />

    <Button
        android:id="@+id/postCancelBtn"
        style="@style/ButtonTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:text="@string/dietCreCancelBtn"
        app:layout_constraintEnd_toEndOf="@+id/postMainTextArea"
        app:layout_constraintTop_toBottomOf="@+id/postMainTextArea" />

    <EditText
        android:id="@+id/postMainTextArea"
        android:layout_width="306dp"
        android:layout_height="137dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:background="@drawable/text_input_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dietCreToolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>