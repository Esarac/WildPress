<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wildpress" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="colorControlNormal">@color/accent</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ToolbarTheme.TitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavbar" parent="@style/Widget.Design.NavigationView">
        <item name="android:background">@color/primary</item>
        <item name="itemIconTint">@color/color_selector</item>
        <item name="itemTextColor">@color/color_selector</item>
        <item name="itemBackground">@drawable/drawable_selector</item>
        <item name="iconSize">@dimen/bottom_navigation_icon_size</item>
    </style>

    <style name="ButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/hind_bold</item>
    </style>

    <style name="BlackTitleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="OrangeTitleText">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>3
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="WhiteTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>3
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="AppNameText">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>s
        <item name="android:textSize">60sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="CheckBoxTheme">
        <item name="android:buttonTint">@color/white</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ProfileTextTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ProfileText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ProfileTextTitle2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/hind_bold</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemTheme</item>
    </style>

    <style name="WorkoutBoxedText">
        <item name="backgroundColor">@color/secondary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WorkoutText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="WorkoutTimerText">
        <item name="backgroundColor">@color/secondary</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WorkoutExerciseText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SpinnerItemTheme" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/secondary</item>
<!--        <item name="android:colorBackground">@color/primary</item>-->
<!--        <item name="android:panelColorBackground">@color/primary</item>-->
    </style>

</resources>